<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FormSubheader" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.ImageView.Fixed" parent="AppTheme">
        <item name="android:layout_width">@dimen/image_size</item>
        <item name="android:layout_height">@dimen/image_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/space_12</item>
        <item name="android:titleMarginBottom">@dimen/space_12</item>
    </style>
    
</resources>
